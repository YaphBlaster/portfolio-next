// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  summary  String
  Projects Project[]
}

model Tech {
  name     String    @id
  Projects Project[]
}

model Project {
  id          String         @id @default(uuid())
  title       String
  description String
  year        Int
  techStack   Tech[]
  User        User[]
  links       ProjectLinks[]
}

model ProjectLinks {
  id           String   @id @default(uuid())
  repositories String[]
  demos        String[]
  Project      Project? @relation(fields: [projectId], references: [id])
  projectId    String?
}
