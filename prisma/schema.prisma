// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PageOwner {
  id             String       @id @default(uuid())
  name           String
  summary        String
  skills         Tech[]
  projects       Project[]
  isDefaultOwner Boolean      @default(false)
  contactInfo    ContactInfo?
}

model ContactInfo {
  id          String    @id @default(uuid())
  github      String
  email       String
  linkedIn    String
  PageOwner   PageOwner @relation(fields: [pageOwnerId], references: [id])
  pageOwnerId String    @unique
}

model Tech {
  title       String
  slug        String      @id
  svg         String
  path        String
  source      String
  hex         String
  Project     Project[]
  projectId   String?
  PageOwner   PageOwner[]
  pageOwnerId String?
}

model Project {
  id          String        @id @default(uuid())
  title       String
  description String
  year        Int
  techStack   Tech[]
  links       ProjectLink[]
  pageOwners  PageOwner[]
}

model ProjectLink {
  id           String   @id @default(uuid())
  repositories String[]
  demos        String[]
  project      Project? @relation(fields: [projectId], references: [id])
  projectId    String?
}
